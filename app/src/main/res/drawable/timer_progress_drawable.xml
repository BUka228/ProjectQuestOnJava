<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background"> <!-- Не используется, но нужен для структуры -->
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="6dp" />
                <solid android:color="?attr/colorPrimary" /> <!-- Цвет прогресса -->
            </shape>
        </clip>
    </item>
</layer-list>