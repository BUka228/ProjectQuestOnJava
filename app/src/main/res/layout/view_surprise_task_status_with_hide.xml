<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/status_icon_surprise_expired"
        android:layout_width="20dp"
        android:layout_height="20dp"
        tools:srcCompat="@drawable/warning"
        tools:tint="?attr/colorError"/>
    <TextView
        android:id="@+id/status_text_surprise_expired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        style="@style/TextAppearance.Material3.BodyMedium"
        android:textStyle="bold"
        tools:textColor="?attr/colorError"
        tools:text="Истекло"/>
    <ImageButton
        android:id="@+id/button_hide_surprise_expired"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/close"
        app:tint="?attr/colorOnSurfaceVariant"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginStart="4dp"
        android:contentDescription="Скрыть"/>
</LinearLayout>