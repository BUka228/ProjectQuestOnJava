<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingHorizontal="6dp">
    <ImageView
        android:id="@+id/imageView_info_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        tools:srcCompat="@drawable/paid"
        tools:tint="#FB8C00"/>
    <TextView
        android:id="@+id/textView_info_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/TextAppearance.App.TitleLarge"
        android:textStyle="bold"
        tools:text="1250"/>
    <TextView
        android:id="@+id/textView_info_subvalue"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        style="@style/TextAppearance.App.LabelSmall"
        android:textColor="?attr/colorOnPrimaryContainer"
        android:gravity="center"
        tools:text="(макс. 1500)"/>
    <TextView
        android:id="@+id/textView_info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.App.BodySmall"
        android:textColor="?attr/colorOnPrimaryContainer"
        tools:text="Монеты"/>
</LinearLayout>