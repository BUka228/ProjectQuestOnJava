<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp">
    <ImageView android:layout_width="56dp" android:layout_height="56dp" android:src="@drawable/error" app:tint="?attr/colorError" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_marginBottom="16dp"/>
    <TextView android:id="@+id/textView_error_message_stats" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/TextAppearance.Material3.TitleLarge" android:text="Ошибка загрузки" android:layout_marginBottom="16dp" android:textAlignment="center"/>
    <Button android:id="@+id/button_retry_stats" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Повторить"/>
</LinearLayout>