<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="12dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/imageView_history_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:srcCompat="@drawable/check_box"
        app:tint="?attr/colorPrimary"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:id="@+id/textView_history_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.BodyMedium"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Задача выполнена"/>
        <TextView
            android:id="@+id/textView_history_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.App.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            tools:text="14:35"/>
    </LinearLayout>
    <!-- Chips для XP и Монет -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <!-- XP Chip (пример) -->
        <FrameLayout
            android:id="@+id/chip_history_xp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/chip_background_green"
            android:paddingHorizontal="6dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            tools:visibility="visible">
            <TextView
                android:id="@+id/textView_history_xp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.App.LabelSmall"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                tools:text="+15XP"
                android:layout_gravity="center"/>
        </FrameLayout>
        <!-- Coins Chip (пример) -->
        <FrameLayout
            android:id="@+id/chip_history_coins"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:background="@drawable/chip_background_orange"
            android:paddingHorizontal="6dp"
            android:visibility="gone"
            tools:visibility="visible">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/textView_history_coins_value"
                    style="@style/TextAppearance.App.LabelSmall"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    tools:text="+5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:srcCompat="@drawable/paid"
                    app:tint="#FFFFFF"
                    android:layout_marginStart="3dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>