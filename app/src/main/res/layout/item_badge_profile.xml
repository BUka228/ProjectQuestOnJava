<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius_large"
    app:cardElevation="1dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/imageView_badge_icon_profile"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                tools:srcCompat="@drawable/badge"/>
            <ImageView
                android:id="@+id/imageView_badge_check_profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/check_circle"
                app:tint="?attr/colorSecondary"
                android:layout_gravity="bottom|end"
                android:background="@drawable/circle_background_surface"
                android:padding="2dp"
                android:visibility="gone"
                tools:visibility="visible"/>
        </FrameLayout>

        <TextView
            android:id="@+id/textView_badge_name_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            style="@style/TextAppearance.App.TitleMedium"
            android:textStyle="bold"
            android:textAlignment="center"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Супер Значок"/>

        <TextView
            android:id="@+id/textView_badge_description_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            style="@style/TextAppearance.App.BodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textAlignment="center"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Очень важное достижение, которое открывает новые горизонты"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>