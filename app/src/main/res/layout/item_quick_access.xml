<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_quick_access_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_corner_radius_large"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="14dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/imageView_quick_access_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            tools:srcCompat="@drawable/grass"/>
        <TextView
            android:id="@+id/textView_quick_access_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            style="@style/TextAppearance.App.BodyLarge"
            android:textStyle="normal"
            tools:text="Мой Сад"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arrow_forward"
            app:tint="?attr/colorOnSurfaceVariant"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>