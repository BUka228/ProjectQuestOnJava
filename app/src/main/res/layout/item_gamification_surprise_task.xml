<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_surprise_task_gamif"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_medium"
    android:layout_marginTop="@dimen/padding_small"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorPrimaryContainer">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="top">
        <ImageView
            android:id="@+id/imageView_surprise_icon_gamif"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/emoji_events"
            app:tint="?attr/colorPrimary"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_surprise_title_gamif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Задача-сюрприз!"
                style="@style/TextAppearance.App.TitleLarge"
                android:textColor="?attr/colorOnPrimaryContainer"/>
            <TextView
                android:id="@+id/textView_surprise_description_gamif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                style="@style/TextAppearance.App.BodyMedium"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:alpha="0.8"
                tools:text="Маленькое задание для большой награды."/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/imageView_surprise_reward_icon_gamif"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    tools:srcCompat="@drawable/paid"
                    app:tint="?attr/colorSecondary"/>
                <TextView
                    android:id="@+id/textView_surprise_reward_name_gamif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/TextAppearance.App.BodyMedium"
                    android:textStyle="bold"
                    android:textColor="?attr/colorSecondary"
                    tools:text="10 Монет"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical|end"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/textView_surprise_timer_gamif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.App.BodySmall"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:alpha="0.8"
                    android:layout_marginEnd="8dp"
                    tools:text="Осталось: 1 ч"/>
                <FrameLayout
                    android:id="@+id/frameLayout_surprise_action_status_gamif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!-- Сюда инфлейтится кнопка или статус -->
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>