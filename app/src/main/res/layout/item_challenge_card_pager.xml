<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_challenge_pager_item_gamif"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="?attr/colorSurfaceVariant"
    app:strokeWidth="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">
            <ImageView
                android:id="@+id/imageView_challenge_pager_icon_gamif"
                android:layout_width="28dp"
                android:layout_height="28dp"
                tools:srcCompat="@drawable/check_box"/>
            <TextView
                android:id="@+id/textView_challenge_pager_name_gamif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="8dp"
                style="@style/TextAppearance.App.TitleLarge"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Ежедневный спринт"/>
            <TextView
                android:id="@+id/textView_challenge_pager_period_gamif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.App.LabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Дневной"/>
        </LinearLayout>
        <TextView
            android:id="@+id/textView_challenge_pager_description_gamif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            style="@style/TextAppearance.App.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Завершите 3 задачи сегодня."/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <ProgressBar
                android:id="@+id/progressBar_challenge_pager_gamif"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="1"
                tools:progress="66"/>
            <TextView
                android:id="@+id/textView_challenge_pager_progress_text_gamif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                style="@style/TextAppearance.App.BodyMedium"
                android:textStyle="bold"
                tools:text="2/3 задач"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:gravity="center_vertical|end"
            android:layout_marginTop="10dp"
            android:minHeight="20dp">
            <LinearLayout
                android:id="@+id/layout_challenge_pager_deadline_gamif"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="start|center_vertical"
                android:visibility="gone"
                tools:visibility="visible">
                <ImageView
                    android:id="@+id/imageView_challenge_pager_deadline_icon_gamif"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:srcCompat="@drawable/schedule"/>
                <TextView
                    android:id="@+id/textView_challenge_pager_deadline_text_gamif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/TextAppearance.App.BodyMedium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Сегодня!"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_challenge_pager_reward_gamif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end|center_vertical"
                android:visibility="gone"
                tools:visibility="visible">
                <ImageView
                    android:id="@+id/imageView_challenge_pager_reward_icon_gamif"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    tools:srcCompat="@drawable/paid"/>
                <TextView
                    android:id="@+id/textView_challenge_pager_reward_name_gamif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    style="@style/TextAppearance.App.BodyMedium"
                    android:textColor="?attr/colorSecondary"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="25 Монет"
                    android:visibility="gone"
                    tools:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>