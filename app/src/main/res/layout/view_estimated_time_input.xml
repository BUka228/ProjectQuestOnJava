<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:paddingVertical="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Часы"
            style="@style/TextAppearance.App.LabelMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_hours"
                style="@style/Widget.App.TextInputLayout.PomodoroTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_hours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    style="@style/TextAppearance.App.DisplayLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    tools:text="00"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        style="@style/TextAppearance.App.DisplayLarge"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginHorizontal="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:textSize="64sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Минуты"
            style="@style/TextAppearance.App.LabelMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="4dp"/>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_minutes"
                style="@style/Widget.App.TextInputLayout.PomodoroTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText_minutes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="2"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    style="@style/TextAppearance.App.DisplayLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    tools:text="26"/>
            </com.google.android.material.textfield.TextInputLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</LinearLayout>